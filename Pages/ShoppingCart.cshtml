@page
@model Mission09_toapita.Pages.ShoppingCartModel
@{
    ViewData["Title"] = "Shopping Cart";
}
<h2>Your Shopping Cart</h2>
<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>Book Title</th>
            <th>Quantity</th>
            <th>Cost</th>
            <th>Subtotal</th>
        </tr>
    </thead>
    <!--Loop through each line line in the cart and output the infor-->
    <tbody>
        @foreach (var i in Model.ShoppingCart.Items)
        {
            <tr>
                <td>@i.Book.Title</td>
                <td>@i.Quantity</td>
                <td>@i.Book.Price</td>
                <td>@((i.Quantity*i.Book.Price).ToString("c"))</td>
                <td class="text-center">
                    <form method="post" asp-page-handler="Remove">
                        <input type="hidden" name="bookId" value="@i.Book.BookId" />
                        <input type="hidden" name="returnUrl" value="@Model.ReturnUrl" />
                        <button type="submit" class="btn btn-sm btn-danger">Remove</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>

    <!--Calculate the total and put it in the foot-->
    <tfoot>
        <td colspan="3">Total:</td>
        <td>@Model.ShoppingCart.CalcTotal().ToString("c")</td>
    </tfoot>
</table>

<div>
    <a class="btn btn-primary" href="@Model.ReturnUrl">Continue Shopping</a>
    <a class="btn btn-primary" asp-action="Checkout" asp-controller="Purchase">Check Out</a>
</div>