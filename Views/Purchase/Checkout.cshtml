@{
}
@model Purchase

<h2>Check out now</h2>
<p>Please enter all the details</p>
<!--Show errors-->
<div asp-validation-summary="All" class="text-danger"></div>
<form method="post" asp-action="Checkout">
    <h4>Ship For</h4>

    <div class="form-group">
        <label asp-for="Name">Name:</label>
        <input asp-for="Name" class="form-control" />
    </div>

    <h4>Address</h4>

    <div class="form-group">
        <label asp-for="AddressLine1">Address Line 1:</label>
        <input asp-for="AddressLine1" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine2">Address Line 2:</label>
        <input asp-for="AddressLine2" />
    </div>

    <div class="form-group">
        <label asp-for="AddressLine3">Address Line 3:</label>
        <input asp-for="AddressLine3" />
    </div>

    <div class="form-group">
        <label asp-for="City">City</label>
        <input asp-for="City" />
    </div>

    <div class="form-group">
        <label asp-for="State">State</label>
        <input asp-for="State" />
    </div>

    <div class="form-group">
        <label asp-for="Zip">Zip</label>
        <input asp-for="Zip" />
    </div>

    <div class="form-group">
        <label asp-for="Country">Country</label>
        <input asp-for="Country" />
    </div>

    <div class="float-end">
        <input class="btn btn-primary" type="submit" value="Checkout"/>
    </div>
</form>