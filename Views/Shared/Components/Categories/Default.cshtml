@model IEnumerable<string>

<!--Adding the side menu with buttons colored based on which page you are on-->

<a asp-controller="Home" asp-action="Index" asp-route-category="" class="btn btn-block @(ViewBag.BookCategory == "" ? "btn-primary":"btn-outline-secondary")") asp-route-pageNum="1">Home</a>

@foreach(string s in Model)
{
    <a asp-controller="Home" asp-action="Index" asp-route-category="@s" class="btn btn-block @(ViewBag.BookCategory == s ? "btn-primary":"btn-outline-secondary")" asp-route-pageNum="1">@s</a>
}